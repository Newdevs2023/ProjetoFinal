{{#section 'styles'}}
<link rel="stylesheet" href="css/style.css">
{{/section}}

<h1>Edição de Produto</h1>

<form action="salvaEdtProduto" method="post">

        <label for="id">id </label>
        <input type="text" id="id" name="id" value="{{data.id}}" readonly>
        <!-- Campo Nome -->
        <label for="nome_lache">Lanche: </label>
        <input type="text" id="lanche" name="lanche" value="{{data.lanche}}" required>

        <!-- descricao_lanche -->
        <label for="descricao_lanche">Descrição:</label>
        <input type="text" id="descricao_lanche" name="descricao" value="{{data.descricao}}" required>

        <!-- Preço -->
        <label for="preco">Preço: R$</label>
        <input type="text" id="preco" name="preco" value="{{data.preco}}" required>

        <!-- imagem -->
        <label for="imagem">Imagem</label>
        <img src="../publico/img/${}.jpg" alt="" width="60px" height="60px" nome="img">

        <!-- Botão de Cadastro -->
        <button>Editar</button>
    </form>